@page "{id:int?}"
@model ListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "笑啥-列表";
}
@foreach (var joke in Model.Jokes)
{
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="@joke.Image" alt="...">
            <div class="caption">
                <h3>@joke.Content</h3>
                <p>...</p>
                <p>
                    @if (!string.IsNullOrEmpty(joke.Video))
                    {
                        <a target="_blank" href="http://dingdang-tv.com/index/jx?url=@joke.Video" class="btn btn-primary" role="button">去看看</a>
                    }
                    <a href="#" class="btn btn-default" role="button">必须得赞</a>
                    <a href="#" class="btn btn-primary" role="button">分享一下</a>
                </p>
            </div>
        </div>
    </div>
}